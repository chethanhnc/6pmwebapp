pipeline{
    agent any 
    def mvnhome = tool name: 'maven3', type: 'maven'
    stages{
        stage('SCM checkout'){
            steps{
                git credentialsId: 'master', url: 'https://github.com/chethanhnc/6pmwebapp'

            }
        }
        stage('Build package'){
            steps{
                sh  script: "${mvnhome}/bin/mvn clean package"

            }
        }
        stage('deploy- to- tomcat'){
            steps{

                echo "deploy into te tomcat"

            }
        }
    }
}