pipeline{
    agent any 
    stages{
        stage('SCM checkout'){
            steps{
        git credentialsId: 'ebf2c8a3-0829-4e46-ac8f-74a116e4587f', 
        url: 'https://github.com/chethanhnc/6pmwebapp.git'
        }
        }
        stage('build package'){
        steps{
        script{
        sh script: 'mvn clean package'
        }
  }
}
   stage('deploying to the tomcat'){
   steps{
   script{
   sh  /var/lib/jenkins/workspace/Bank_application/target/6pmwebapp.war /opt/tomcat8/webapps
   }
   }
   }

}
}
